
  <div class="card-post" id="post-<%= post.id %>">

    <div class="flexbox cat-remove mb-3">
      <div class="category "><h2 class="xsmall-size m-0 padding-category"id="white" ><%= post.category %></h2></div>
      <div class="remove">
        <div>
          <%= link_to "âŒ", post_excludeds_path(post), method: :post, remote: true, id: "bomb" %>
        </div>
        <div>
          <progress id="file" style="width: 40px;" max="100" value="<%= 100 - (post.expires_at - Time.zone.now) / 86400 * 100 %>"></progress>
        </div>
      </div>
  </div>

    <div class="card-center">

      <div class=" card-post-info d-flex mb-2 ">
        <div class ="p-2 ">
          <% if post.user.photo.attached? %>
          <div class="avatar-post"><%= cl_image_tag post.user.photo.key, height:50, width:50 %></div>
          <% end %>
        </div>
        <div class ="ml-3 mt-3">
          <h4 class="user"><%= post.user.first_name %></h4>
          <h2 class="xsmall-size"><%= post.user.job.upcase %></h2>
        </div>
      </div>

      <div class="d-flex justify-content-between ">
          <h1 class="small-size p-2"><%= post.title %></h1>
      <h5 class="created p-2" style="max-width: 78px; text-align: right;"  id="blue"><%= post.created_at.strftime("%d %b - %I.%M") %></h5>
      </div>
      <div class="card-post-content " >
        <p class="small-size" id="blue"><%= post.content %></p>
      </div>
      <div class="m-5 text-right "> </div>
  </div>

  <div class="div-delete">
    <% if post.user == current_user %>
      <%= link_to "Delete my post", post_path(post), data: { confirm: "Are you sure you want to delete your post?" }, method: :delete, class: "btn-4tiary-delete" %>
    <% else %>
      <%= link_to "Start chat", user_messages_path(post.user), class: "btn-4tiary-chat" %>
    <% end %>
  </div>

</div>
