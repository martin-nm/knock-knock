<% @posts.each do |post| %>
  <h1><%= post.title %></h1>
  <h2><%= post.category %></h2>
  <p><%= post.content %></p>
  <p>expires <%= post.expires_at %></p>
  <%= link_to "delete post", post_path(post), data: { confirm: "Are you sure you want to delete your post?" }, method: :delete, class: "btn-secondary" %>
<% end %>
