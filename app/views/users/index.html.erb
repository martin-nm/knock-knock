<div class=" map-box"
  id="map"
  style="width: 100%;
  height: 75vh;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="cards">
  <!-- render partial user_cards -->
  <% @users.each do |user| %>
    <div class="card-index-user">
      <%= link_to(user_path(user)) do %>
        <%#= cl_image_tag user.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face %>
        <h4 class="small-size"><%= user.first_name %></h4>
        <h2 class ="xsmall-size"><%= user.job.upcase %></h2>
      <% end %>
    </div>
  <% end %>
</div>

