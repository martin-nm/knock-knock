<div class = "container">
  <div class= "card-user  p-4 mt-3 col-12">

    <div class= "card-all-info  d-flex justify-content-start" >
      <% if @user.photo.attached? %>
      <div class="avatar-large m-2"><%= cl_image_tag @user.photo.key, height:50, width:50 %></div>
      <% end %>
      <div class= card-global-info>
        <h4 class="middle-size"><%= @user.first_name %> </h4>
        <h3 class="small-size pb-2"><em>"<%= @user.status %>"</em></h3>
        <h2 class ="small-size mb-3"><%= @user.job.upcase %></h2>
        <div class = "btn-start">
        <div class= "mt-4 ">
          <%= link_to render("shared/button", text: "START TO CHAT"), new_user_message_path(@user.id) %>
        </div>
      </div>
    </div>
  </div>



<div class="mt-4 row">
  <div class="col-4">
     <div class= "card-user p-4 ">
      <p>Website : aline-michet.com </p>
      <p>Linkedin : aline-michet </p>
    </div>
  </div>
  <div class="col-8">
    <div class= "card-user  p-4">
      <p> <strong>About :</strong> <%= @user.bio %> </p>
    </div>
  </div>
</div>
